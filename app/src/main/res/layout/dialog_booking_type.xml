<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_top"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Select booking type"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/local_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/roundedselectbox"
            android:backgroundTint="#E6F2FE"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/local_booking_image"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_singlepin_inside" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/local_booking_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:text="Local"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/outstation_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/roundedselectbox"
            android:backgroundTint="#D7F4E0"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/outstation_booking_image"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/outstation_booking" />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/outstation_booking_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:text="Outstation"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"

                android:src="@drawable/ic_right" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

