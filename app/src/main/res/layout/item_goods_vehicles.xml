<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:background="@color/light_blue"
    app:cardBackgroundColor="@color/light_blue"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/vehicleImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/titillium_web_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:text="Tata Ace" />

                <ImageView
                    android:id="@+id/infoIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_error"
                    app:tint="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/capacityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_web_regular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    tools:text="750 kg" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/dot_indicator" />

                <TextView
                    android:id="@+id/arrivalTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium_web_regular"
                    android:textColor="@color/green"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="- -" />

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/titillium_web_bold"
                    android:gravity="end"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="â‚¹1854" />
            </LinearLayout>

            <!--            <TextView-->
            <!--                android:id="@+id/newTag"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:background="@drawable/new_tag_background"-->
            <!--                android:fontFamily="@font/titillium_web_bold"-->
            <!--                android:paddingHorizontal="12dp"-->
            <!--                android:paddingVertical="4dp"-->
            <!--                android:text="New"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="12sp"-->
            <!--                android:visibility="gone"-->
            <!--                tools:visibility="visible" />-->
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>