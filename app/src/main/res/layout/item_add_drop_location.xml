<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp"
    android:gravity="center_vertical">

    <!-- Vertical dotted line with pin icons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="12dp">

<!--        &lt;!&ndash; Dashed line from previous item &ndash;&gt;-->
        <View
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/dashed_line_vertical"

            />

        <!-- Red pin for drop -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/circle_red"

                android:tint="@color/colorerror"/>

            <TextView
                android:id="@+id/dropTextIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Drop location details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Drop Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_location_field"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtDropContactDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No contact details"
                android:textColor="@color/grey"
                android:textSize="11sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/txtDropAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where is your Drop ?"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:drawableEnd="@drawable/ic_right"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>

        </LinearLayout>


    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:tint="@color/colorPrimary"
            android:contentDescription="Edit"/>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:tint="@color/colorPrimary"
            android:contentDescription="Search"/>

        <ImageView
            android:id="@+id/btnRemove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic__close"
            android:tint="@color/colorerror"
            android:contentDescription="Remove"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>