<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_card"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Filter"
            android:textColor="#222222"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Clear"
            android:textColor="#2563FF"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <!-- Date Range -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:text="Date Range"
        android:textColor="#222222"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rg_date_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/rb_last_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:buttonTint="#2563FF"
            android:text="Last Week"
            android:textColor="#222222"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_last_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:buttonTint="#2563FF"
            android:text="Last Month"
            android:textColor="#222222"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_last_3_months"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:buttonTint="#2563FF"
            android:text="Last 3 Months"
            android:textColor="#222222"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#2563FF"
            android:text="Custom"
            android:textColor="#222222"
            android:textSize="15sp" />
    </RadioGroup>

    <!-- Apply Button -->
    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_blue_button"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>